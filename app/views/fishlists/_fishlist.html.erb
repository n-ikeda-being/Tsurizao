<div id="<%= dom_id fishlist %>">

  <p>
    <strong><%= t('views.common.creater') %></strong>
    <%= link_to fishlist.user.name, user_path(fishlist.user.id) %>
  </p>

  <p>
    <strong><%= t('views.common.date') %></strong>
    <%= fishlist.date %>
  </p>

  <p>
    <strong><%= t('views.common.time') %></strong>
    <% unless fishlist.time.nil? %>
      <% if fishlist.time.strftime("%H") && (00..11).cover?(fishlist.time.strftime("%H").to_i) %>
        AM
      <% else %>
        PM
      <% end %>
      <%= fishlist.time.strftime("%H:%M") %>
    <% end %>
  </p>

  <p>
    <strong><%= t('views.common.prefecture') %></strong>
    <%= fishlist.prefecture.name %>
  </p>

  <p>
    <strong><%= t('views.common.place') %></strong>
    <%= fishlist.place %>
  </p>

  <p>
    <strong><%= t('views.common.fishname') %></strong>
    <%= fishlist.fishname %>
  </p>

  <p>
    <strong><%= t('views.common.fishlength') %></strong>
    <%= fishlist.fishlength %> cm
  </p>

  <p>
    <strong><%= t('views.common.fishweight') %></strong>
    <%= fishlist.fishweight %> g
  </p>

  <p>
    <strong><%= t('views.common.fishingmethod') %></strong>
    <%= fishlist.fishingmethod %>
  </p>

  <p>
    <% if fishlist.fishimg.attached? %>
      <% fishlist.fishimg.each do |img| %>
        <%= image_tag img,size: '200x200' %>
      <% end %>
    <% end %>
  </p>

  <p class="font_s1">
    <%= t('views.common.created_date') %>
    <%= fishlist.created_at.to_fs(:datetime_jp) %>
  </p>

  <p class="font_s1">
    <%= t('views.common.update_date') %>
    <%= fishlist.updated_at.to_fs(:datetime_jp) %>
  </p>

</div>
