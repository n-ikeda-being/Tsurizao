<% users.each do |user| %>
    <% if user.avatar.attached? %>
        <%= image_tag user.avatar,size: '40x40' %>
    <% else %>
        <%= image_tag "noimage.jpeg",size: '40x40' %>
    <% end %>
    <%= user.name %>
    <%= link_to t('views.common.show'), user %><br>
    <% end %><br>

<%= link_to t('views.common.back'), users_path %>