<h1><%= t('.user') %></h1>

<table>
    <thead>
        <tr>
            <th><%= t('.name') %></th>
            <th><%= t('.avatar') %></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td>
            <% if user.avatar.attached? %>
                <%= image_tag user.avatar,size: '50x50' %>
            <% end %>
            </td>
            <td><%= link_to t('views.common.show'), user %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @users %>
